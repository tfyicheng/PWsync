{
  "manifest_version": 3,
  "name": "PWsync",
  "version": "1.0",
  "description": "webdev密码同步工具",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://your-webdev-domain.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://your-webdev-domain.com/*"],
      "js": ["content.js"]
    }
  ]
}